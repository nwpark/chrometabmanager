{
  "manifest_version": 2,
  "name": "Chrome Tab Manager",
  "version": "0.6.3",

  "description": "A simple, powerful tab manager.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "background": {
    "scripts": [
      "background.js",
      "runtime.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Chrome Tab Manager v0.6.3-alpha"
  },

  // todo: make permissions optional
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "chrome://favicon/",
    "activeTab",
    "identity",
    "https://www.googleapis.com/*"
  ],

  "options_page": "options.html",

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "oauth2": {
    "client_id": "187114739506-1cd6plmklmpik0rs9ng7rrgo12fs561e.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },

  "key": "",
  // todo: remove
  "content_security_policy": "script-src 'self' https://apis.google.com/; object-src 'self'"
}
