{
  "manifest_version": 2,
  "name": "Chrome Tab Manager",
  "version": "0.7.1",

  "description": "A simple, powerful tab manager.",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "background": {
    "scripts": [
      "background.js",
      "runtime.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Chrome Tab Manager v0.7.1-alpha"
  },

  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "chrome://favicon/",
    "activeTab"
  ],

  "optional_permissions": [
    "identity",
    "https://www.googleapis.com/*"
  ],

  "options_page": "options.html",

  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "oauth2": {
    "client_id": "187114739506-qcpriglr4f1d28v7r9302nb2hq2pj8ih.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.appdata",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },

  "key": ""
}
